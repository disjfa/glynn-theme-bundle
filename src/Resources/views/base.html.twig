{%- trans_default_domain 'glynn-theme' -%}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}{{ 'site.meta.title' | trans }}{% endblock %}</title>
    {% block meta %}
        <meta name="description" content="{% block meta_description %}{% endblock %}">
        {{ include('@GlynnTemplate/_meta.html.twig') }}
        {% block meta_og %}
        {% endblock %}
        {% block meta_twitter %}
            <meta name="twitter:card" value="summary">
        {% endblock %}
    {% endblock %}
    <link rel="stylesheet" href="{{ asset('build/site.css') }}">
</head>
<body>
{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('home_index') }}">{% block navbar_title %}{{ 'site.navbar.title' | trans }}{% endblock %}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-navbar" aria-controls="main-navbar" aria-expanded="false" aria-label="{{ 'site.navbar.toggle_navigation' | trans }}">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="main-navbar">
                {{ knp_menu_render('glynn-site', {'currentClass': 'active', 'ancestorClass': 'active', 'depth':2, 'template': 'admin/menu.html.twig'}) }}
                <ul class="navbar-nav ml-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a href="{{ path('fos_user_profile_show') }}" class="nav-link">
                                <i class="fa fa-user"></i>
                                {{ app.user.username }}
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a href="{{ path('admin_dashboard_index') }}" class="nav-link">
                                    <i class="fa fa-tachometer-alt"></i>
                                    {{ 'site.navbar.admin' | trans }}
                                </a>
                            </li>
                        {% endif %}
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ path('fos_user_security_login') }}" class="nav-link">
                                {{ 'site.navbar.login' | trans }}
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}
<div id="base">
    {% block body %}{% endblock %}
</div>
{% block javascripts %}
    <script src="{{ asset('build/site.js') }}"></script>
{% endblock %}
</body>
</html>